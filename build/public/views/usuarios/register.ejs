
<div class="wrapper">
          <div class="main-panel">
              <div class="content">
                  <div class="container-fluid">
                      <div class="row">
                          <div class="col-md-8">
                              <div class="card">
                                <!--<span class="active total" style="display:block;" data-toggle="modal" data-target="#myModal"><strong>All USA</strong> (Select your city to see local ads)</span>-->
                                  <div class="header">
                                    <h1 class="title">Gestionar usuarios</h1>
                                  </div>
                                  <hr/>
                                  <div class="content">
                                      <form method="post" action="/user/register">
                                          <div class="row">
                                              <div class="col-md-5">
                                                  <div class="form-group">
                                                      <label>Identificación</label>
                                                      <input type="text" class="form-control" name="identificacion" pattern="[0-9]*" title="Digita sólo números" required>
                                                  </div>
                                              </div>
                                              <div class="col-md-7">
                                                  <div class="form-group">
                                                      <label>Nombres</label>
                                                      <input type="text" class="form-control" name="nombres" pattern="[a-z A-Z]*" title="Digita sólo letras" required>
                                                  </div>
                                              </div>
                                              <div class="col-md-7">
                                                  <div class="form-group">
                                                      <label>Apellidos</label>
                                                      <input type="text" class="form-control" name="apellidos" pattern="[a-z A-Z]*" title="Digita sólo letras" required>
                                                  </div>
                                              </div>
                                              <div class="col-md-5">
                                                  <div class="form-group">
                                                      <label>Dirección</label>
                                                      <input type="text" class="form-control" name="direccion" required>
                                                  </div>
                                              </div>
                                              <div class="col-md-6">
                                                  <div class="form-group">
                                                      <label>Correo</label>
                                                      <input type="text" class="form-control" name="correo" required>
                                                  </div>
                                              </div>
                                              <div class="col-md-6">
                                                  <div class="form-group" ng-init="getDptos()">
                                                      <label>Departamento</label>
                                                      <select name="departamento" ng-model="Dpto" ng-change="getMpios(Dpto)" class="form-control" required="">
                                                        <option ng-repeat="l in listDptos" ng-value="{{l.idDpto}}">{{l.NombreDpto}}</option>
                                                      </select>
                                                  </div>
                                              </div>
                                              <div class="col-md-6">
                                                  <div class="form-group">
                                                      <label>Municipio</label>
                                                      <select name="ciudad" class="form-control" required="">
                                                        <option ng-repeat="l in listMpios" ng-value="{{l.idCiudad}}">{{l.NombreCiudad}}</option>
                                                      </select>
                                                  </div>
                                              </div>
                                              <div class="col-md-6">
                                                  <div class="form-group" ng-init="getRoles()">
                                                      <label>Rol</label>
                                                      <select name="rol" class="form-control" required="">
                                                        <option ng-repeat="l in listRoles" ng-value="{{l.idRol}}">{{l.NombreRol}}</option>
                                                      </select>
                                                  </div>
                                              </div>
                                          </div>

                                          <button type="submit" class="btn btn-info btn-fill pull-right">Registrar usuario</button>
                                          <div class="clearfix"></div>
                                      </form>
                                  </div>
                              </div>
                          </div>
                          <div class="col-md-4">
                              <div class="card card-user">
                                  <div class="image">
                                      <img src="/images/main/user.png" alt="..."/>
                                  </div>
                                  <div class="content">
                                      <div class="author">

                                          <a href="#">
                                            <div class="text-center">
                                              <h4 class="title">Mike Andrew<br/>
                                                  <small>michael24</small>
                                              </h4>
                                            </div>
                                          </a>

                                      </div>
                                      <p class="description text-center">
                                          "Lamborghini Mercy
                                          <br>
                                          Your chick she so thirsty
                                          <br>
                                          I'm in that two seat Lambo"
                                      </p>
                                  </div>
                                  <hr>
                                  <div class="text-center">
                                      <button href="#" class="btn btn-simple">
                                          <i class="fa fa-facebook-square"></i>
                                      </button>
                                      <button href="#" class="btn btn-simple">
                                          <i class="fa fa-twitter"></i>
                                      </button>
                                      <button href="#" class="btn btn-simple">
                                          <i class="fa fa-google-plus-square"></i>
                                      </button>
                                  </div>
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>
